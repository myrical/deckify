generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ─── Auth (NextAuth.js) ─────────────────────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── Users & Organizations ──────────────────────────────────────────────────

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  memberships    OrgMembership[]
  platformAuths  PlatformAuth[] @relation("PlatformAuthConnectedBy")
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members       OrgMembership[]
  clients       Client[]
  platformAuths PlatformAuth[]
  presets       Preset[]        // org-level shared presets
}

model OrgMembership {
  id     String  @id @default(cuid())
  role   String  @default("owner") // owner, admin, member
  userId String
  orgId  String

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([userId, orgId])
}

// ─── Platform Connections (org-level OAuth) ─────────────────────────────────

model PlatformAuth {
  id                String    @id @default(cuid())
  platform          String    // "meta" | "google" | "shopify"
  orgId             String
  connectedByUserId String
  accessToken       String    @db.Text  // encrypted at application level
  refreshToken      String?   @db.Text  // encrypted at application level
  tokenExpiresAt    DateTime?
  scopes            String[]  @default([])
  platformUserId    String?   // Meta user ID, Google email — identifies who authed
  platformMeta      Json?     // platform-specific extras, e.g. { shop: "x.myshopify.com" }
  status            String    @default("active") // active, expired, revoked
  connectedAt       DateTime  @default(now())
  lastRefreshedAt   DateTime  @default(now())
  lastSyncAt        DateTime? // when we last called listAccounts with this token

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  connectedBy  User         @relation("PlatformAuthConnectedBy", fields: [connectedByUserId], references: [id])
  adAccounts   AdAccount[]

  @@unique([orgId, platform, platformUserId])
}

// ─── Clients & Data Sources (Ad Accounts) ───────────────────────────────────

model Client {
  id        String   @id @default(cuid())
  name      String
  orgId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  adAccounts   AdAccount[]
  presets      Preset[]     // client-level presets
}

model AdAccount {
  id             String   @id @default(cuid())
  platform       String   // "meta" | "google" | "shopify"
  platformId     String   // the actual ad account ID on the platform
  name           String
  currency       String   @default("USD")
  timezone       String   @default("America/New_York")
  status         String   @default("active") // active, disabled, disconnected
  clientId       String?  // nullable — null means unassigned (discovered but not organized)
  platformAuthId String   // which PlatformAuth provides the token for API calls
  isActive       Boolean  @default(true) // user toggle: include in reports/billing or not
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  client       Client?      @relation(fields: [clientId], references: [id], onDelete: SetNull)
  platformAuth PlatformAuth @relation(fields: [platformAuthId], references: [id], onDelete: Cascade)

  @@unique([platform, platformId])
}

// ─── Google Slides Output Connection ────────────────────────────────────────

model GoogleSlidesConnection {
  id             String   @id @default(cuid())
  userId         String   @unique
  accessToken    String   @db.Text  // encrypted
  refreshToken   String?  @db.Text  // encrypted
  tokenExpiresAt DateTime?
  scopes         String[] @default([])
  connectedAt    DateTime @default(now())
}

// ─── Presets ────────────────────────────────────────────────────────────────

model Preset {
  id        String   @id @default(cuid())
  name      String
  clientId  String?  // null = org-level preset
  orgId     String?  // null = client-level preset
  config    Json     // DeckConfig serialized as JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  client       Client?       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  organization Organization? @relation(fields: [orgId], references: [id], onDelete: Cascade)
}
